<div class="Questions index">
  <h2>Questions</h2>

  <%= link_to("Add New Question", '#', :class => 'action new') %>

  <table class="listing" summary="Question list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Text</th>
      <th>Current</th>
      <th>Actions</th>
    </tr>
    <% @questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.text %></td>
      <td class="center"><%= question.current ? 'Yes' : 'No' %></td>
      <td class="actions">
        <%= link_to("Show", '#', :class => 'action show') %>
        <%= link_to("Edit", '#', :class => 'action edit') %>
        <%= link_to("Delete", '#', :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
