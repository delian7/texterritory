<div class="question edit">
	<h2>Update Question</h2>

	<%= form_for(:question, :url => {:action => 'update', :id => @question.id}) do |f| %>
		
		<%= render(:partial => 'form', :locals => {:f => f}) %>

		<div class"btn btn-default">
			<%= submit_tag("Revise Question") %>
		</div>

	<% end %>

</div>